  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Rubik:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary: #C8102E;

      --secondary:  #2B2B2B;

      --secondary: #2B2B2B;

      --accent: #4cc9f0;
      --success: #4ade80;
      --warning: #f59e0b;
      --danger: #ef4444;
      --light: #f8f9fa;
      --dark: #212529;
      --text: #334155;
      --bg-gradient: linear-gradient(135deg, #C8102E, #2B2B2B);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #f0f4ff 0%, #e8f2ff 100%);
      color: var(--text);
      line-height: 1.6;
      min-height: 100vh;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }

    /* Hero Header */
    .hero-header {
      background: var(--bg-gradient);
      color: white;
      padding: 80px 0 60px;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .hero-header::before {
      content: "";
      position: absolute;
      top: -50%;
      right: -20%;
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, rgba(200, 16, 46, 0.2) 0%, transparent 70%);
      border-radius: 50%;
      animation: float 6s ease-in-out infinite;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0) rotate(0deg); }
      50% { transform: translateY(-20px) rotate(180deg); }
    }

    .hero-header h1 {
      font-size: 3.5rem;
      font-weight: 700;
      margin-bottom: 15px;
      font-family: 'Rubik', sans-serif;
      position: relative;
      z-index: 2;
    }

    .hero-header p {
      font-size: 1.2rem;
      opacity: 0.9;
      max-width: 600px;
      margin: 0 auto;
      position: relative;
      z-index: 2;
    }

    /* Courses Container */
    .courses-container {
      padding: 80px 0;
    }

    .courses-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 30px;
      margin-top: 50px;
    }

    .course-card {
      background: white;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(200, 16, 46, 0.1);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      border: 1px solid rgba(200, 16, 46, 0.08);
    }

    .course-card:hover {
      transform: translateY(-12px) scale(1.02);
      box-shadow: 0 20px 50px rgba(200, 16, 46, 0.2);
    }

    .course-header {
      background: var(--bg-gradient);
      color: white;
      padding: 25px 30px;
      position: relative;
      overflow: hidden;
    }

    .course-header::before {
      content: "";
      position: absolute;
      top: -50%;
      right: -50%;
      width: 100px;
      height: 100px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 50%;
      animation: pulse 3s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% { transform: scale(1); opacity: 0.3; }
      50% { transform: scale(1.2); opacity: 0.6; }
    }

    .course-header h2 {
      font-size: 1.8rem;
      font-weight: 600;
      margin-bottom: 5px;
      position: relative;
      z-index: 2;
    }

    .course-header p {
      opacity: 0.9;
      font-size: 0.95rem;
      position: relative;
      z-index: 2;
    }

    .course-content {
      padding: 30px;
      position: relative;
    }

