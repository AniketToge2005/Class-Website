/* animation */
/* Reusable Animated Button */
.animated-submit a:hover,
.animated-submit button:hover {
  background: linear-gradient(135deg, #1dd1a1, #10ac84); /* Stylish green-teal gradient */
  color: #fff;
  transform: translateY(-3px) scale(1.02);
  box-shadow: 0 8px 16px rgba(16, 172, 132, 0.3);
  border-color: transparent;
}

.animated-submit a:hover span,
.animated-submit button:hover span {
  color: #fff;
}

.animated-submit a:hover img,
.animated-submit button:hover img {
  filter: brightness(110%);
}

.animated-submit {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  margin: 10px auto;
}

.animated-submit a,
.animated-submit button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 180px;
  height: 60px;
  border-radius: 50px;
  background: #fff;
  border: 3px solid #6fb07f;
  position: relative;
  overflow: hidden;
  text-decoration: none;
  font-family: 'Montserrat', sans-serif;
  font-weight: 600;
  font-size: 18px;
  color: #6fb07f;
  transition: all 0.3s ease-in-out;
  cursor: pointer;
}

.animated-submit a span,
.animated-submit button span {
  z-index: 1;
  transition: opacity 0.3s ease-in-out;
}

.animated-submit a img,
.animated-submit button img {
  position: absolute;
  width: 20px;
  height: 20px;
  opacity: 0;
  transition: opacity 0.3s ease-in-out;
}

/* Animation triggers */
.animated-submit a:focus,
.animated-submit button:focus {
  animation: extend 0.8s ease-in-out forwards;
  outline: none;
}

.animated-submit a:focus span,
.animated-submit button:focus span {
  animation: disappear 0.8s ease-in-out forwards;
}

.animated-submit a:focus img,
.animated-submit button:focus img {
  animation: appear 0.8s ease-in-out forwards;
}

/* Keyframes */
@keyframes extend {
  0% {
    width: 180px;
    background: #fff;
  }
  100% {
    width: 60px;
    background: #24aa46;
  }
}

@keyframes disappear {
  0% {
    opacity: 1;
    color: #6fb07f;
  }
  100% {
    opacity: 0;
  }
}

@keyframes appear {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

@media (max-width: 576px) {
  .animated-submit a,
  .animated-submit button {
    width: 150px;
    height: 50px;
    font-size: 16px;
  }
}


