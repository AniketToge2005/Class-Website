<%- include("navbar") %>

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet" />
<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --primary: #C8102E;
    --dark: #2B2B2B;
    --accent: #4cc9f0;
    --radius: 12px;
    --light-bg: #f4f4f4;
  }

  body {
    font-family: 'Poppins', sans-serif;
    background: var(--light-bg);
    color: #222;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .login-container {
    display: flex;
    border-radius: var(--radius);
    max-width: 1000px;
    width: 100%;
    margin: auto;
    box-shadow: 0 0 25px rgba(0, 0, 0, 0.15);
    overflow: hidden;
    background: white;
    margin-top: 40px;
    margin-bottom: 40px;
  }

  .info-panel {
    flex: 1;
    padding: 40px;
    background: white;
  }

  .info-panel h2 {
    font-size: 26px;
    color: var(--primary);
    margin-bottom: 15px;
  }

  .info-panel p,
  .info-panel ul li {
    font-size: 15px;
    line-height: 1.6;
    margin-bottom: 12px;
  }

  .contact-info {
    margin-top: 30px;
    font-size: 14px;
    color: #444;
  }

  .contact-info a {
    color: var(--primary);
    text-decoration: none;
    font-weight: 500;
  }

  .contact-info a:hover {
    text-decoration: underline;
  }

  .login-box {
    flex: 1;
    padding: 40px;
    background: linear-gradient(135deg, var(--primary), var(--dark));
    color: white;
  }

  .login-box h2 {
    text-align: center;
    margin-bottom: 25px;
    font-size: 24px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    font-size: 14px;
    display: block;
    margin-bottom: 6px;
  }

  .form-group input {
    width: 100%;
    padding: 12px;
    border-radius: 8px;
    border: none;
    font-size: 14px;
    background: #fff;
    color: #000;
  }

  .btn {
    width: 100%;
    padding: 12px;
    background: #4cc9f0;
    border: none;
    border-radius: 8px;
    color: white;
    font-weight: bold;
    font-size: 16px;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .btn:hover {
    background: #3f37c9;
  }

  .register-link {
    text-align: center;
    margin-top: 20px;
    font-size: 14px;
  }

  .register-link a {
    color: #00ffcc;
    font-weight: bold;
    text-decoration: none;
  }

  .register-link a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .login-container {
      flex-direction: column;
    }

    .info-panel,
    .login-box {
      padding: 25px;
    }
  }
</style>

<div class="login-container">
  <!-- Info Panel -->
  <div class="info-panel">
    <h2>Welcome to TI Classes</h2>
    <p>Login to access your personal dashboard, progress reports, and more.</p>
    <ul>
      <li>✔ Trusted by 500+ students</li>
      <li>✔ Assignments & Results Tracking</li>
      <li>✔ Instant Support via WhatsApp</li>
    </ul>
    <div class="contact-info">
      <p><strong>Developed by A2Z IT Hub | © 2025</strong></p>
      <p>If any query or suggestion, please WhatsApp:</p>
      <p><a href="https://wa.me/917666168187" target="_blank">7666168187</a></p>
    </div>
  </div>

  <!-- Login Form -->
  <div class="login-box">
    <h2>Login</h2>
    <form>
      <div class="form-group">
        <label for="email">Email or Username</label>
        <input type="text" id="email" required placeholder="Enter your email or username">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" required placeholder="Enter your password">
      </div>
      <button type="submit" class="btn">Login</button>
    </form>

    <div class="register-link">
      Don't have an account? <a href="/registerStudent">Register Here</a>
    </div>
  </div>
</div>

<%- include("footer") %>
