<%- include("navbar") %>

<!-- Google Fonts + Font Awesome -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(40px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --primary: #C8102E;
    --dark: #2B2B2B;
    --accent: #4cc9f0;
    --radius: 12px;
    --light-bg: #f4f4f4;
  }

  body {
    font-family: 'Poppins', sans-serif;
    background: var(--light-bg);
    color: #222;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .page-banner {
    background: linear-gradient(to right, #C8102E, #2B2B2B);
    padding: 40px 0;
    text-align: center;
  }

  .page-banner h1 {
    color: white;
    font-size: 36px;
    font-weight: 800;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .login-container {
    display: flex;
    border-radius: var(--radius);
    max-width: 1000px;
    width: 100%;
    margin: auto;
    box-shadow: 0 0 25px rgba(0, 0, 0, 0.15);
    overflow: hidden;
    background: white;
    margin-top: 40px;
    margin-bottom: 40px;
    animation: fadeInUp 1s ease-out;
  }

  .info-panel {
    flex: 1;
    padding: 40px;
    background: #f5f5f5;
    color: #000;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .info-panel h2 {
    font-size: 28px;
    color: #C8102E;
    margin-bottom: 20px;
    font-weight: 600;
  }

  .info-panel p {
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 14px;
  }

  .info-panel ul {
    list-style: none;
    padding-left: 0;
    margin: 0;
  }

  .info-panel ul li {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    font-size: 16px;
    margin-bottom: 12px;
    line-height: 1.5;
  }

  .info-panel ul li::before {
    content: "✔";
    color: #C8102E;
    font-weight: bold;
    font-size: 18px;
    line-height: 1.2;
  }

  .contact-info {
    margin-top: 30px;
    font-size: 14px;
    color: #333;
  }

  .contact-info a {
    color: #C8102E;
    font-weight: bold;
    text-decoration: none;
  }

  .contact-info a:hover {
    text-decoration: underline;
  }

  .contact-icons {
    margin-top: 10px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .contact-icons a {
    font-size: 15px;
    color: #C8102E;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .contact-icons a:hover {
    text-decoration: underline;
  }

  .login-box {
    flex: 1;
    padding: 40px;
    background: linear-gradient(135deg, var(--primary), var(--dark));
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .login-box h2 {
    text-align: center;
    margin-bottom: 25px;
    font-size: 24px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    font-size: 14px;
    display: block;
    margin-bottom: 6px;
  }

  .form-group input {
    width: 100%;
    padding: 12px;
    border-radius: 8px;
    border: none;
    font-size: 14px;
    background: #fff;
    color: #000;
  }

  .btn {
    width: 100%;
    padding: 12px;
    background: #4cc9f0;
    border: none;
    border-radius: 8px;
    color: white;
    font-weight: bold;
    font-size: 16px;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .btn:hover {
    background: #3f37c9;
  }

  .register-link {
    text-align: center;
    margin-top: 20px;
    font-size: 14px;
  }

  .register-link a {
    color: #00ffcc;
    font-weight: bold;
    text-decoration: none;
  }

  .register-link a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .login-container {
      flex-direction: column-reverse;
    }

    .info-panel,
    .login-box {
      padding: 25px;
    }

    .page-banner h1 {
      font-size: 28px;
    }
  }
</style>

<!-- ===== Banner Heading ===== -->
<div class="page-banner">
  <h1>Student Login</h1>
</div>

<!-- ===== Login Section ===== -->
<div class="login-container">
  <!-- Left Info Panel -->
  <div class="info-panel">
    <h2>Welcome to <span style="color: #C8102E;">TI Classes</span></h2>
    <p>We provide expert academic coaching from <strong>5th to 12th Standard</strong>.</p>
    <ul>
      <li>Experienced Subject Teachers</li>
      <li>Assignments & Performance Tracking</li>
      <li>Instant Support via WhatsApp</li>
      <li>Trusted by 500+ Students</li>
    </ul>
    <div class="contact-info">
      <p><strong>Developed by A2Z IT Hub | © 2025</strong></p>
      <p>Have questions? Reach us:</p>
      <div class="contact-icons">
        <a href="https://wa.me/917666168187" target="_blank">
          <i class="fab fa-whatsapp"></i> 7666168187
        </a>
        <a href="tel:7666168187">
          <i class="fas fa-phone-alt"></i> 7666168187
        </a>
      </div>
    </div>
  </div>

  <!-- Right Login Box -->
  <div class="login-box">
    <h2>Login</h2>
    <form>
      <div class="form-group">
        <label for="email">Email or Username</label>
        <input type="text" id="email" required placeholder="Enter your email or username">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" required placeholder="Enter your password">
      </div>
      <button type="submit" class="btn">Login</button>
    </form>
    <div class="register-link">
      Don't have an account? <a href="/registerStudent">Register Here</a>
    </div>
  </div>
</div>

<%- include("footer") %>
