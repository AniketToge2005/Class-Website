      display: flex;
      justify-content: center;
      gap: 12px;
      padding: 1.2rem;
      border-radius: 50px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.08);
      margin: 2.5rem auto;
      max-width: 90%;
      flex-wrap: wrap;
    }
    
    .batch-link {
      color: #555;
      font-weight: 500;
      text-decoration: none;
      padding: 8px 18px;
      transition: all 0.3s ease;
      border-radius: 30px;
      position: relative;
      overflow: hidden;
      cursor: pointer;
      font-size: 0.95rem;
      border: 1px solid #e0e0e0;
    }
    
    .batch-link::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: -1;
    }
    
    .batch-link:hover {
      color: white;
      border-color: transparent;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(74, 107, 255, 0.2);
    }
    
    .batch-link:hover::before {
      opacity: 1;
    }
    
    .batch-link.active {
      color: white;
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
      box-shadow: 0 6px 18px rgba(74, 107, 255, 0.3);
      border-color: transparent;
      transform: translateY(-2px);
