  <script>
    $(document).ready(function() {
      // Filter functionality
      $('.filter-navbar .nav-link').click(function(e) {
        e.preventDefault();
        $('.filter-navbar .nav-link').removeClass('active');
        $(this).addClass('active');
        
        const filter = $(this).data('filter');
        $('#loading-spinner').show();
        $('#no-results').hide();
        
        setTimeout(function() {
          if (filter === 'all') {
            // Show all courses
            $('.offer-card-container').show();
            $('.col-12.mb-5').show();
          } 
          else {
            // Hide all sections and cards first
            $('.col-12.mb-5').hide();
            $('.offer-card-container').hide();
            
            // Show only the cards with matching data-class
            $(`.offer-card-container[data-class="${filter}"]`).show();
            
            // Show the parent section of matching cards
            $(`.offer-card-container[data-class="${filter}"]`).each(function() {
              $(this).closest('.col-12.mb-5').show();
            });
            
            // If no courses found, show no results message
            if ($(`.offer-card-container[data-class="${filter}"]:visible`).length === 0) {
              $('#no-results').show();
            }
          }
          
          $('#loading-spinner').hide();
        }, 500);
      });

      // Search functionality
      $('#search-button').click(function() {
        const searchTerm = $('#course-search').val().toLowerCase();
        if (searchTerm.trim() === '') return;
        
        $('#loading-spinner').show();
        $('#no-results').hide();
        
        setTimeout(function() {
          $('.offer-card-container').each(function() {
            const title = $(this).find('.offer-card-title').text().toLowerCase();
            const description = $(this).find('.offer-card-text').text().toLowerCase();
            
            if (title.includes(searchTerm) || description.includes(searchTerm)) {
              $(this).show();
              $(this).closest('.col-12.mb-5').show();
            } else {
              $(this).hide();
            }
          });
          
          // Hide empty sections
          $('.col-12.mb-5').each(function() {
            if ($(this).find('.offer-card-container:visible').length === 0) {
              $(this).hide();
            }
          });
          
          if ($('.offer-card-container:visible').length === 0) {
            $('#no-results').show();
          }
          
          $('#loading-spinner').hide();
        }, 500);
      });

      // Countdown timer
      function updateCountdowns() {
        $('.countdown').each(function() {
          const endDate = new Date($(this).data('end')).getTime();
          const now = new Date().getTime();
          const distance = endDate - now;
          
          if (distance < 0) {
            $(this).text('Offer expired');
            return;
          }
          
          const days = Math.floor(distance / (1000 * 60 * 60 * 24));
          const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
          const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
          
          $(this).text(`${days}d ${hours}h ${minutes}m`);
        });
      }
      
      updateCountdowns();
      setInterval(updateCountdowns, 60000);
      
      // Explore Button Click Handler
      $(document).on('click', '.explore-btn', function() {
        const offerTitle = $(this).data('offer');
        const offerPrice = $(this).data('price');
        
        // Set modal title
        $('#exploreModalTitle').text(offerTitle);
        
        // Set course description
        $('#courseDescription').text($(this).closest('.offer-card-body').find('.offer-card-text').text());
        
        // Set batch timings based on class
        const classLevel = $(this).closest('.offer-card-container').data('class');
        let timings = '';
        
        if (classLevel <= 8) {
          timings = '4:00 PM - 5:30 PM';
        } else if (classLevel <= 10) {
          timings = '5:00 PM - 6:30 PM';
        } else {
          timings = '6:00 PM - 8:00 PM';
        }
        
        $('#batchTimings').text(timings);
        
        // Show the modal
        $('#exploreModal').modal('show');
      });
      
      // Buy Now Button Click Handler - Updated for Razorpay
      $(document).on('click', '.buy-btn', function() {
        const offerTitle = $(this).data('offer');
        const offerPrice = $(this).data('price') * 100; // Convert to paise for Razorpay
        
        // Set modal title and details
        $('#buyModalTitle').text('Purchase: ' + offerTitle);
        $('#courseNameInModal').text(offerTitle);
        $('#paymentAmount').text((offerPrice/100).toLocaleString());
        
        // Store the price for Razorpay handler
        $('#rzp-button').data('price', offerPrice);
        $('#rzp-button').data('title', offerTitle);
        
        // Show the modal
        $('#buyModal').modal('show');
      });
      
      // Razorpay Payment Handler
      $('#rzp-button').click(function(e) {
        e.preventDefault();
        
        const amount = $(this).data('price');
        const courseName = $(this).data('title');
        
        const rzp = new Razorpay(options);
        rzp.open();
      });
    });
  </script>
  
