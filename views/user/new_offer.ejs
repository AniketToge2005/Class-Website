    }

    .schedule-item {
      display: flex;
      justify-content: space-between;
      padding: 0.75rem 0;
      border-bottom: 1px solid #eee;
    }

    .schedule-item:last-child {
      border-bottom: none;
    }

    .payment-container {
      text-align: center;
      padding: 1rem;
    }

    .payment-methods {
      margin-bottom: 1.5rem;
    }

    .payment-instructions {
      background-color: #f8f9fa;
      padding: 1rem;
      border-radius: var(--border-radius);
      margin-top: 1rem;
      text-align: left;
    }

    /* Features Section */
    .features-section {
      background-color: white;
      padding: 3rem 0;
      margin-top: 3rem;
      border-radius: var(--border-radius);
      box-shadow: var(--box-shadow);
    }

    .feature-item {
      text-align: center;
      padding: 1.5rem;
    }

    .feature-icon {
      font-size: 2.5rem;
      color: var(--primary-color);
      margin-bottom: 1rem;
    }

    .feature-title {
      font-weight: 600;
      color: var(--text-color);
      margin-bottom: 0.5rem;
    }

    .feature-text {
      color: var(--text-light);
      font-size: 0.9rem;
    }

    /* Testimonials */
    .testimonial-section {
      padding: 3rem 0;
    }

    .testimonial-card {
      background-color: white;
      border-radius: var(--border-radius);
      padding: 1.5rem;
      box-shadow: var(--box-shadow);
      margin: 0.5rem;
    }

    .testimonial-text {
      font-style: italic;
      color: var(--text-color);
      margin-bottom: 1rem;
    }

    .testimonial-author {
      display: flex;
      align-items: center;
    }

    .testimonial-author-img {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      object-fit: cover;
      margin-right: 1rem;
    }

    .author-name {
      font-weight: 600;
      margin-bottom: 0.25rem;
    }

    .author-title {
      color: var(--text-light);
      font-size: 0.8rem;
    }

    .copyright {
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      padding-top: 1.5rem;
      margin-top: 2rem;
      text-align: center;
      color: #adb5bd;
      font-size: 0.9rem;
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
      .hero-title {
        font-size: 2rem;
      }
      
      .hero-subtitle {
        font-size: 1rem;
      }
      
      .offer-card-img {
        height: 150px;
      }
      
      .current-price {
        font-size: 1.3rem;
      }
      
      .btn-explore, .btn-buy {
        padding: 0.5rem 1rem;
        font-size: 0.8rem;
      }
    }

    @media (max-width: 576px) {
      .section-header {
        font-size: 1.3rem;
      }
      
      .offer-card-title {
        font-size: 1rem;
      }
      
      .current-price {
        font-size: 1.2rem;
      }
      
      .countdown-timer {
        font-size: 0.7rem;
      }
      
      .filter-navbar .nav-link {
        padding: 0.5rem 0.75rem;
        font-size: 0.8rem;
        margin: 0.1rem;
      }
    }

    /* Animation Classes */
    .animate__animated {
      animation-duration: 0.5s;
    }

    /* Loading Spinner */
    .loading-spinner {
      display: none;
      text-align: center;
      padding: 3rem 0;
    }

    /* No Results Message */
    .no-results {
      text-align: center;
      padding: 3rem 0;
      color: var(--text-light);
      display: none;
    }

    .no-results i {
      font-size: 3rem;
      margin-bottom: 1rem;
      color: #dee2e6;
    }
  </style>
</head>

<body>
