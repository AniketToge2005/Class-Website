<%-include("navbar")%>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>EduLearn - Online Courses for All Classes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
  <style>
    :root {
      --primary-color: #4361ee;
      --secondary-color: #3f37c9;
      --accent-color: #4cc9f0;
      --success-color: #4ad66d;
      --danger-color: #f72585;
      --warning-color: #f8961e;
      --light-color: #f8f9fa;
      --dark-color: #212529;
      --text-color: #2b2d42;
      --text-light: #8d99ae;
      --border-radius: 10px;
      --box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      --transition: all 0.3s ease;
    }

    .filter-navbar .nav-link {
  padding: 8px 16px;
  border-radius: 20px;
  font-weight: 500;
  color: #333;
  border: 1px solid transparent;
  transition: all 0.3s ease;
}

.filter-navbar .nav-link:hover {
  background-color: #007bff;
  color: #fff;
  border-color: #007bff;
}

.filter-navbar .nav-link.active,
.filter-navbar .nav-link:focus {
  background-color: #007bff;
  color: white;
  border-color: #007bff;
}

    

    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f8f9fa;
      color: var(--text-color);
      line-height: 1.6;
    }

    /* Navbar Styles */
    .navbar-brand {
      font-weight: 700;
      font-size: 1.5rem;
      color: var(--primary-color);
    }

    .navbar-brand span {
      color: var(--danger-color);
    }

    .nav-link {
      font-weight: 500;
      padding: 0.5rem 1rem;
    }

    /* Hero Section */
    .hero-section {
      background: linear-gradient(90deg, #df183a, #070707);
      color: white;
      padding: 4rem 0;
      border-radius: 0 0 20px 20px;
      margin-bottom: 3rem;
      position: relative;
      overflow: hidden;
    }

    .hero-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: url('https://images.unsplash.com/photo-1523050854058-8df90110c9f1?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80') no-repeat center center/cover;
      opacity: 0.1;
    }

    .hero-title {
      font-weight: 700;
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

    .hero-subtitle {
      font-weight: 400;
      font-size: 1.2rem;
      margin-bottom: 2rem;
      opacity: 0.9;
    }

    .search-bar {
      max-width: 600px;
      margin: 0 auto;
    }

    /* Filter Navbar */
    .filter-navbar {
      background-color: white;
      box-shadow: var(--box-shadow);
      border-radius: var(--border-radius);
      padding: 1rem;
      margin-bottom: 2rem;
    }

    .filter-navbar .nav-link {
      color: var(--text-light);
      border-radius: 50px;
      padding: 0.5rem 1.25rem;
      margin: 0 0.25rem;
      transition: var(--transition);
    }

    .filter-navbar .nav-link:hover,
    .filter-navbar .nav-link.active {
      background-color: var(--primary-color);
      color: white;
    }

    /* Section Header */
    .section-header {
      position: relative;
      padding-bottom: 0.75rem;
      margin-bottom: 2rem;
      font-weight: 700;
      color: var(--text-color);
    }

    .section-header::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 60px;
      height: 4px;
      background-color: var(--primary-color);
      border-radius: 2px;
    }

    .section-header i {
      color: var(--primary-color);
      margin-right: 0.5rem;
    }

    /* Offer Card */
    .offer-card-container {
      transition: transform 0.3s ease;
      margin-bottom: 2rem;
    }

    .offer-card-container:hover {
      transform: translateY(-5px);
    }

    .offer-card {
      background: white;
      border-radius: var(--border-radius);
      overflow: hidden;
      box-shadow: var(--box-shadow);
      transition: var(--transition);
      border: none;
      height: 100%;
      display: flex;
      flex-direction: column;
      min-height: 500px;
    }

    .offer-card:hover {
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
      transform: translateY(-5px);
    }

    .offer-card-img {
      width: 100%;
      height: 300px;
      object-fit: cover;
      border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .offer-highlight {
      position: absolute;
      top: 10px;
      right: 10px;
      background-color: var(--danger-color);
      color: white;
      padding: 0.25rem 0.75rem;
      border-radius: 50px;
      font-size: 0.7rem;
      font-weight: 600;
      text-transform: uppercase;
      z-index: 2;
    }

    .offer-card-body {
      padding: 1.25rem;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .badge-custom {
      background-color: var(--accent-color);
      color: white;
      font-size: 0.7rem;
      font-weight: 600;
      padding: 0.25rem 0.75rem;
      border-radius: 50px;
      text-transform: uppercase;
      align-self: flex-start;
      margin-bottom: 0.5rem;
    }

    .offer-card-title {
      font-weight: 600;
      margin: 0.5rem 0;
      color: var(--text-color);
      font-size: 1rem;
      line-height: 1.4;
    }

    .offer-card-text {
      color: var(--text-light);
      font-size: 0.85rem;
      margin-bottom: 0.75rem;
    }

    .price-container {
      margin: 0.75rem 0;
    }

    .current-price {
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--danger-color);
    }

    .original-price {
      font-size: 0.9rem;
      text-decoration: line-through;
      color: var(--text-light);
      margin-left: 0.5rem;
    }

    .discount-badge {
      background-color: #ffebee;
      color: var(--danger-color);
      font-size: 0.75rem;
      font-weight: 600;
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
      margin-left: 0.5rem;
    }

    .card-actions {
      margin-top: 1rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-shrink: 0;
    }

    .btn-explore {
      background-color: var(--primary-color);
      color: white;
      border-radius: 50px;
      padding: 0.4rem 1rem;
      font-size: 0.85rem;
      font-weight: 500;
      transition: var(--transition);
      border: none;
      display: flex;
      align-items: center;
    }

    .btn-explore:hover {
      background-color: var(--secondary-color);
      color: white;
      transform: translateY(-2px);
    }

    .btn-explore i {
      margin-left: 0.5rem;
      font-size: 0.7rem;
    }

    .btn-buy {
      background-color: var(--success-color);
      color: white;
      border-radius: 50px;
      padding: 0.4rem 1rem;
      font-size: 0.85rem;
      font-weight: 500;
      transition: var(--transition);
      border: none;
      display: flex;
      align-items: center;
    }

    .btn-buy:hover {
      background-color: #3a9d4e;
      color: white;
      transform: translateY(-2px);
    }

    .btn-buy i {
      margin-left: 0.5rem;
      font-size: 0.7rem;
    }

    .countdown-timer {
      font-size: 0.75rem;
      color: var(--danger-color);
      font-weight: 600;
      text-align: center;
      background-color: #ffebee;
      padding: 0.5rem;
      border-radius: 4px;
      margin-top: 0.75rem;
    }

    /* Modal Styles */
    .modal-content {
      border-radius: var(--border-radius);
      border: none;
    }

    .modal-header {
      border-bottom: none;
      padding-bottom: 0;
    }

    .modal-title {
      font-weight: 600;
      color: var(--primary-color);
    }

    .teacher-card {
      display: flex;
      align-items: center;
      margin-bottom: 1rem;
      padding: 1rem;
      background-color: #f8f9fa;
      border-radius: var(--border-radius);
    }

    .teacher-img {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      object-fit: cover;
      margin-right: 1rem;
    }

    .teacher-info h5 {
      margin-bottom: 0.25rem;
      font-size: 1rem;
    }

    .teacher-info p {
      font-size: 0.8rem;
      color: var(--text-light);
      margin-bottom: 0;
    }

    .batch-schedule {
      margin-top: 1.5rem;
    }

    .schedule-item {
      display: flex;
      justify-content: space-between;
      padding: 0.75rem 0;
      border-bottom: 1px solid #eee;
    }

    .schedule-item:last-child {
      border-bottom: none;
    }

    .payment-container {
      text-align: center;
      padding: 1rem;
    }

    .payment-methods {
      margin-bottom: 1.5rem;
    }

    .payment-instructions {
      background-color: #f8f9fa;
      padding: 1rem;
      border-radius: var(--border-radius);
      margin-top: 1rem;
      text-align: left;
    }

    /* Features Section */
    .features-section {
      background-color: white;
      padding: 3rem 0;
      margin-top: 3rem;
      border-radius: var(--border-radius);
      box-shadow: var(--box-shadow);
    }

    .feature-item {
      text-align: center;
      padding: 1.5rem;
    }

    .feature-icon {
      font-size: 2.5rem;
      color: var(--primary-color);
      margin-bottom: 1rem;
    }

    .feature-title {
      font-weight: 600;
      color: var(--text-color);
      margin-bottom: 0.5rem;
    }

    .feature-text {
      color: var(--text-light);
      font-size: 0.9rem;
    }

    /* Testimonials */
    .testimonial-section {
      padding: 3rem 0;
    }

    .testimonial-card {
      background-color: white;
      border-radius: var(--border-radius);
      padding: 1.5rem;
      box-shadow: var(--box-shadow);
      margin: 0.5rem;
    }

    .testimonial-text {
      font-style: italic;
      color: var(--text-color);
      margin-bottom: 1rem;
    }

    .testimonial-author {
      display: flex;
      align-items: center;
    }

    .testimonial-author-img {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      object-fit: cover;
      margin-right: 1rem;
    }

    .author-name {
      font-weight: 600;
      margin-bottom: 0.25rem;
    }

    .author-title {
      color: var(--text-light);
      font-size: 0.8rem;
    }

    .copyright {
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      padding-top: 1.5rem;
      margin-top: 2rem;
      text-align: center;
      color: #adb5bd;
      font-size: 0.9rem;
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
      .hero-title {
        font-size: 2rem;
      }
      
      .hero-subtitle {
        font-size: 1rem;
      }
      
      .offer-card-img {
        height: 200px;
      }
      
      .offer-card {
        min-height: 450px;
      }
      
      .current-price {
        font-size: 1.1rem;
      }
      
      .btn-explore, .btn-buy {
        padding: 0.4rem 0.8rem;
        font-size: 0.8rem;
      }
    }

    @media (max-width: 576px) {
      .section-header {
        font-size: 1.3rem;
      }
      
      .offer-card-title {
        font-size: 0.95rem;
      }
      
      .current-price {
        font-size: 1rem;
      }
      
      .countdown-timer {
        font-size: 0.7rem;
      }
      
      .filter-navbar .nav-link {
        padding: 0.5rem 0.75rem;
        font-size: 0.8rem;
        margin: 0.1rem;
      }
    }

    /* Animation Classes */
    .animate__animated {
      animation-duration: 0.5s;
    }

    /* Loading Spinner */
    .loading-spinner {
      display: none;
      text-align: center;
      padding: 3rem 0;
    }

    /* No Results Message */
    .no-results {
      text-align: center;
      padding: 3rem 0;
      color: var(--text-light);
      display: none;
    }

    .no-results i {
      font-size: 3rem;
      margin-bottom: 1rem;
      color: #dee2e6;
    }

    /* Payment Form Styles */
    .payment-form .form-group {
      margin-bottom: 1rem;
    }
    
    .payment-form label {
      font-weight: 500;
      margin-bottom: 0.5rem;
      display: block;
    }
    
    .payment-form .form-control {
      border-radius: var(--border-radius);
      padding: 0.5rem 1rem;
      border: 1px solid #dee2e6;
    }
    
    .payment-form .btn-payment {
      background-color: var(--primary-color);
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: var(--border-radius);
      font-weight: 500;
      width: 100%;
      margin-top: 1rem;
    }
    
    .payment-form .btn-payment:hover {
      background-color: var(--secondary-color);
    }
    
    .course-summary {
      background-color: #f8f9fa;
      padding: 1rem;
      border-radius: var(--border-radius);
      margin-bottom: 1.5rem;
    }
    
    .course-summary h5 {
      margin-bottom: 0.5rem;
    }
    
    .course-summary .price {
      font-weight: 700;
      color: var(--danger-color);
      font-size: 1.25rem;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
 
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container text-center">
      <h1 class="hero-title animate_animated animate_fadeInDown">Unlock Your Learning Potential</h1>
      <p class="hero-subtitle animate_animated animatefadeIn animate_delay-1s">Discover the best courses for all classes and competitive exams</p>
      
      <div class="search-bar animate_animated animatefadeIn animate_delay-2s">
        <div class="input-group mb-3">
          <input type="text" class="form-control form-control-lg" placeholder="Search for courses..." id="course-search">
          <button class="btn btn-primary" type="button" id="search-button">
            <i class="fas fa-search"></i> Search
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Filter Navbar -->
  <div class="container py-3">
    <nav class="filter-navbar">
      <ul class="nav justify-content-center flex-wrap gap-2">
        <li class="nav-item">
          <a class="active filter-btn" href="?class_id=all" data-filter="all">All Courses</a>
        </li>
        <li class="nav-item">
          <a class="filter-btn" href="?class_id=5">Class 5</a>
        </li>
        <li class="nav-item">
          <a class="filter-btn" href="?class_id=6" data-filter="6">Class 6</a>
        </li>
        <li class="nav-item">
          <a class="filter-btn" href="?class_id=7" data-filter="7">Class 7</a>
        </li>
        <li class="nav-item">
          <a class="filter-btn" href="?class_id=8" data-filter="8">Class 8</a>
        </li>
        <li class="nav-item">
          <a class="filter-btn" href="?class_id=9" data-filter="9">Class 9</a>
        </li>
        <li class="nav-item">
          <a class="filter-btn" href="?class_id=10" data-filter="10">Class 10</a>
        </li>
        <li class="nav-item">
          <a class="filter-btn" href="?class_id=11" data-filter="11">Class 11</a>
        </li>
        <li class="nav-item">
          <a class="filter-btn" href="?class_id=12" data-filter="12">Class 12</a>
        </li>
      </ul>
    </nav>
  </div>
  
  
  <!-- Main Content -->
  <div class="container py-4">
    <!-- No Results Message (Hidden by default) -->
    <div class="no-results" id="no-results">
      <i class="fas fa-book-open"></i>
      <h3>No courses found</h3>
      <p>Try adjusting your search or filters</p>
    </div>

    <!-- Loading Spinner (Hidden by default) -->
    <div class="loading-spinner" id="loading-spinner" style="display: none;">
      <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
      <p class="mt-3">Loading courses...</p>
    </div>

    <!-- Courses Grid -->
    <div id="courses-container">
      <!-- Class 5 Offers -->

      <% for (var i = 0; i < aniket.length; i++) { %>
  <% if (selectedClassId == 'all' || aniket[i].class_id == selectedClassId) { %>
    <div class="col-12 mb-5" id="class<%= aniket[i].class_id %>-section">
      <h3 class="section-header"><i class="fas fa-school me-2"></i> Class <%= aniket[i].class_id %></h3>
      <div class="row" id="class<%= aniket[i].class_id %>-offers">

        <div class="col-md-6 col-lg-4 mb-4 offer-card-container animate_animated animate_fadeIn" data-class="<%= aniket[i].class_id %>" data-tag="<%= aniket[i].subject.toLowerCase() %>">
          <div class="offer-card h-100">
            <span class="offer-highlight">New</span>
            <img src="/uplaod/<%= aniket[i].image_url %>" alt="<%= aniket[i].subject %>" class="offer-card-img">
            
            <div class="offer-card-body">
              <span class="badge-custom"><%= aniket[i].subject %></span>
              <h5 class="offer-card-title"><%= aniket[i].course_title %></h5>
              <p class="offer-card-text"><%- aniket[i].description %></p>

              <div class="price-container">
                <span class="current-price"><%= aniket[i].original_price %></span>
                <span class="original-price"><%= aniket[i].discounted_price %></span>
                <span class="discount-badge"><%= aniket[i].discount_percentage %>% OFF</span>
              </div>

              <div class="card-actions">
                <a href="/class<%= aniket[i].class_id %>">
                  <button class="btn btn-primary">Explore <i class="fas fa-chevron-right"></i></button>
                </a>
                <button class="btn btn-buy buy-btn" data-offer="<%= aniket[i].course_title %>" data-price="<%= aniket[i].price %>">
                  Buy Now <i class="fas fa-shopping-cart"></i>
                </button>
              </div>

              <div class="countdown-timer mt-3">
                Offer ends in: 
                <span class="countdown" data-end="<%= aniket[i].end_date %>"><%= aniket[i].end_date %></span>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  <% } %>
<% } %>
  
      
    
          
         

    

 
  <!-- Payment Form Modal -->
  <div class="modal fade" id="paymentModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Complete Your Enrollment</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="studentInfoForm" class="payment-form">
            <input type="hidden" id="courseTitle" name="courseTitle">
            <input type="hidden" id="coursePrice" name="coursePrice">
            
            <div class="course-summary">
              <h5 id="paymentCourseTitle"></h5>
              <div class="price">₹<span id="paymentCoursePrice"></span></div>
            </div>
            
            <div class="form-group">
              <label for="studentName">Student Name</label>
              <input type="text" class="form-control" id="studentName" required>
            </div>
            
            <div class="form-group">
              <label for="mobileNumber">Mobile Number</label>
              <input type="tel" class="form-control" id="mobileNumber" required>
            </div>
            
            <div class="form-group">
              <label for="address">Address</label>
              <textarea class="form-control" id="address" rows="3" required></textarea>
            </div>
            
            <div class="form-group">
              <label for="schoolName">School Name</label>
              <input type="text" class="form-control" id="schoolName" required>
            </div>
            
            <button type="submit" class="btn btn-payment">Proceed to Payment</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  
  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <script>
    $(document).ready(function() {
      // Filter functionality
      $('.filter-navbar .nav-link').click(function(e) {
        e.preventDefault();
        $('.filter-navbar .nav-link').removeClass('active');
        $(this).addClass('active');
        
        const filter = $(this).data('filter');
        $('#loading-spinner').show();
        $('#no-results').hide();
        
        setTimeout(function() {
          if (filter === 'all') {
            // Show all courses
            $('.offer-card-container').show();
            $('.col-12.mb-5').show();
          } 
          else {
            // Hide all sections and cards first
            $('.col-12.mb-5').hide();
            $('.offer-card-container').hide();
            
            // Show only the cards with matching data-class
            $(`.offer-card-container[data-class="${filter}"]`).show();
            
            // Show the parent section of matching cards
            $(`.offer-card-container[data-class="${filter}"]`).each(function() {
              $(this).closest('.col-12.mb-5').show();
            });
            
            // If no courses found, show no results message
            if ($(`.offer-card-container[data-class="${filter}"]:visible`).length === 0) {
              $('#no-results').show();
            }
          }
          
          $('#loading-spinner').hide();
        }, 500);
      });

      // Search functionality
      $('#search-button').click(function() {
        const searchTerm = $('#course-search').val().toLowerCase();
        if (searchTerm.trim() === '') return;
        
        $('#loading-spinner').show();
        $('#no-results').hide();
        
        setTimeout(function() {
          $('.offer-card-container').each(function() {
            const title = $(this).find('.offer-card-title').text().toLowerCase();
            const description = $(this).find('.offer-card-text').text().toLowerCase();
            
            if (title.includes(searchTerm) || description.includes(searchTerm)) {
              $(this).show();
              $(this).closest('.col-12.mb-5').show();
            } else {
              $(this).hide();
            }
          });
          
          // Hide empty sections
          $('.col-12.mb-5').each(function() {
            if ($(this).find('.offer-card-container:visible').length === 0) {
              $(this).hide();
            }
          });
          
          if ($('.offer-card-container:visible').length === 0) {
            $('#no-results').show();
          }
          
          $('#loading-spinner').hide();
        }, 500);
      });

      // Countdown timer
      function updateCountdowns() {
        $('.countdown').each(function() {
          const endDate = new Date($(this).data('end')).getTime();
          const now = new Date().getTime();
          const distance = endDate - now;
          
          if (distance < 0) {
            $(this).text('Offer expired');
            return;
          }
          
          const days = Math.floor(distance / (1000 * 60 * 60 * 24));
          const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
          const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
          
          $(this).text(`${days}d ${hours}h ${minutes}m`);
        });
      }
      
      updateCountdowns();
      setInterval(updateCountdowns, 60000);
      
      // Explore Button Click Handler
      $(document).on('click', '.explore-btn', function() {
        const offerTitle = $(this).data('offer');
        const offerPrice = $(this).data('price');
        
        // Set modal title
        $('#exploreModalTitle').text(offerTitle);
        
        // Set course description
        $('#courseDescription').text($(this).closest('.offer-card-body').find('.offer-card-text').text());
        
        // Set batch timings based on class
        const classLevel = $(this).closest('.offer-card-container').data('class');
        let timings = '';
        
        if (classLevel <= 8) {
          timings = '4:00 PM - 5:30 PM';
        } else if (classLevel <= 10) {
          timings = '5:00 PM - 6:30 PM';
        } else {
          timings = '6:00 PM - 8:00 PM';
        }
        
        $('#batchTimings').text(timings);
        
        // Show the modal
        $('#exploreModal').modal('show');
      });
      
      // Buy Now Button Click Handler - Show Payment Form
      $(document).on('click', '.buy-btn', function(e) {
        e.preventDefault();
        
        const offerTitle = $(this).data('offer');
        const offerPrice = $(this).data('price');
        
        // Set form values
        $('#courseTitle').val(offerTitle);
        $('#coursePrice').val(offerPrice);
        $('#paymentCourseTitle').text(offerTitle);
        $('#paymentCoursePrice').text(offerPrice.toLocaleString());
        
        // Reset form
        $('#studentInfoForm')[0].reset();
        
        // Show the modal
        $('#paymentModal').modal('show');
      });
      
      // Payment Form Submission Handler
      $('#studentInfoForm').submit(function(e) {
        e.preventDefault();
        
        const offerTitle = $('#courseTitle').val();
        const offerPrice = $('#coursePrice').val() * 100; // Convert to paise
        const studentName = $('#studentName').val();
        const mobileNumber = $('#mobileNumber').val();
        const address = $('#address').val();
        const schoolName = $('#schoolName').val();
        
        // Validate form
        if (!studentName || !mobileNumber || !address || !schoolName) {
          alert('Please fill all required fields');
          return;
        }
        
        // Prepare Razorpay options
        const options = {
          "key": "rzp_test_bpN3aN81Oaf8Mo", // Replace with your Razorpay key
          "amount": offerPrice,
          "currency": "INR",
          "name": "EduLearn",
          "description": offerTitle,
          "image": "https://example.com/your_logo.jpg",
          "handler": function(response) {
            // Handle successful payment
            $('#paymentModal').modal('hide');
            
            // You can send this data to your server for verification
            const paymentData = {
              razorpay_payment_id: response.razorpay_payment_id,
              course: offerTitle,
              amount: offerPrice / 100,
              student: {
                name: studentName,
                mobile: mobileNumber,
                address: address,
                school: schoolName
              }
            };
            
            console.log('Payment successful:', paymentData);
            alert('Payment successful! Your enrollment is confirmed.');
            
            // Here you would typically send the data to your server
            // $.post('/api/payment-success', paymentData, function(res) {
            //   console.log('Server response:', res);
            // });
          },
          "prefill": {
            "name": studentName,
            "contact": mobileNumber,
          },
          "theme": {
            "color": "#4361ee"
          }
        };
        
        const rzp = new Razorpay(options);
        rzp.open();
      });
    });
  </script>
