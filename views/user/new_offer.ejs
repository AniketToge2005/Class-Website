      margin: 0 auto;
    }

    /* Filter Navbar */
    .filter-navbar {
      background-color: white;
      box-shadow: var(--box-shadow);
      border-radius: var(--border-radius);
      padding: 1rem;
      margin-bottom: 2rem;
    }

    .filter-navbar .nav-link {
      color: var(--text-light);
      border-radius: 50px;
      padding: 0.5rem 1.25rem;
      margin: 0 0.25rem;
      transition: var(--transition);
    }

    .filter-navbar .nav-link:hover,
    .filter-navbar .nav-link.active {
      background-color: var(--primary-color);
      color: white;
    }

    /* Section Header */
    .section-header {
      position: relative;
      padding-bottom: 0.75rem;
      margin-bottom: 2rem;
      font-weight: 700;
      color: var(--text-color);
    }

    .section-header::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 60px;
      height: 4px;
      background-color: var(--primary-color);
