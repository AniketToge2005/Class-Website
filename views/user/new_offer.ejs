      transform: translateY(-5px);
    }

    .offer-card-img {
      width: 100%;
      height: 300px;
      object-fit: cover;
      border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .offer-highlight {
      position: absolute;
      top: 10px;
      right: 10px;
      background-color: var(--danger-color);
      color: white;
      padding: 0.25rem 0.75rem;
      border-radius: 50px;
      font-size: 0.7rem;
      font-weight: 600;
      text-transform: uppercase;
      z-index: 2;
    }

    .offer-card-body {
      padding: 1.25rem;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .badge-custom {
