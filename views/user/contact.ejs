<%- include("navbar") %>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    :root {
        --primary: #4361ee;
        --secondary: #3f37c9;
        --accent: #e92412;
        --light: #ffffff;
        --dark: #212529;
        --gray: #6c757d;
        --shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        --radius: 10px;
        --bg-gradient: linear-gradient(135deg, #f0f2f5, #ffffff);
        --box-gradient: linear-gradient(135deg, #C8102E, #2B2B2B);
        --banner-bg: linear-gradient(135deg, #C8102E, #000000);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background: var(--bg-gradient);
        color: var(--dark);
        min-height: 100vh;
    }

    .contact-banner {
        background: var(--banner-bg);
        padding: 40px 20px;
        text-align: center;
        color: white;
    }

    .contact-banner h1 {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }

    .contact-banner p {
        font-size: 1.1rem;
        color: #eee;
    }

    .contact-container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 20px;
    }

    .contact-area {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 30px;
    }

    .card {
        flex: 1 1 350px;
        background: var(--box-gradient);
        padding: 25px;
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        animation: fadeIn 0.5s ease-in-out;
        color: #fff;
        margin-bottom: -50px;
    }

    .section-title {
        font-size: 1.4rem;
        color: #fff;
        margin-bottom: 15px;
        border-bottom: 2px solid #fff;
        display: inline-block;
        padding-bottom: 5px;
    }

    .info-item {
        display: flex;
        align-items: flex-start;
        margin-bottom: 15px;
    }

    .info-item i {
        background: var(--primary);
        color: white;
        padding: 10px;
        border-radius: 50%;
        margin-right: 12px;
        min-width: 40px;
        text-align: center;
    }

    .info-item p {
        margin: 5px 0;
        color: #f1f1f1;
    }

    .social-links {
        margin-top: 20px;
        display: flex;
        gap: 10px;
    }

    .social-links a {
        background: #e9ecef;
        color: var(--dark);
        width: 35px;
        height: 35px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        transition: 0.3s;
    }

    .social-links a:hover {
        background: var(--primary);
        color: white;
        transform: translateY(-2px);
    }

    .form-group {
        position: relative;
        margin-bottom: 25px;
    }

    .form-group input,
    .form-group textarea {
        width: 100%;
        padding: 14px 12px;
        font-size: 15px;
        border: 2px solid #ccc;
        border-radius: 8px;
        background: #fff;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

    .form-group textarea {
        min-height: 100px;
        resize: vertical;
    }

    .form-group input:focus,
    .form-group textarea:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 4px rgba(67, 97, 238, 0.1);
        outline: none;
    }

    .form-group label {
        position: absolute;
        top: 50%;
        left: 12px;
        transform: translateY(-50%);
        color: var(--gray);
        font-size: 14px;
        background: white;
        padding: 0 5px;
        pointer-events: none;
        transition: 0.3s ease;
    }

    .form-group input:focus + label,
    .form-group input:not(:placeholder-shown) + label,
    .form-group textarea:focus + label,
    .form-group textarea:not(:placeholder-shown) + label {
        top: -10px;
        left: 10px;
        font-size: 12px;
        color: var(--primary);
        background: #fff;
    }

    .btn {
        padding: 12px 25px;
        background: var(--primary);
        color: white;
        border: none;
        border-radius: var(--radius);
        font-weight: bold;
        cursor: pointer;
        width: 100%;
        transition: 0.3s;
    }

    .btn:hover {
        background: var(--secondary);
        transform: translateY(-2px);
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 768px) {
        .contact-banner h1 {
            font-size: 1.6rem;
        }

        .contact-area {
            flex-direction: column;
        }
    }
</style>

<div class="contact-banner" style="margin-top: -45px;">
    <h1>Get in Touch With Us</h1>
    <p>Reach out to us with any questions or feedback.</p>
</div>

<div class="contact-container mb-4">
    <div class="contact-area">
        <div class="card">
            <h2 class="section-title">Get In Touch</h2>
            <div class="info-item">
                <i class="fas fa-map-marker-alt"></i>
                <div>
                    <p><%-contact_info.address%></p>
                    <p>Boston, MA 02115</p>
                </div>
            </div>
            <div class="info-item">
                <i class="fas fa-phone-alt"></i>
                <div>
                    <p>Main: (+91) <%-contact_info.phone%></p>
                    <p>Support: (+91) 7249329153</p>
                </div>
            </div>
            <div class="info-item">
                <i class="fas fa-envelope"></i>
                <div>
                    <p><%-contact_info.email%></p>
                </div>
            </div>
            <div class="info-item">
                <i class="fas fa-clock"></i>
                <div>
                    <p>Mon-Fri: 8AMâ€“6PM</p>
                    <p><%-contact_info.work_time%></p>
                </div>
            </div>
            <div class="social-links">
                <a href="<%-contact_info.facebook%>"><i class="fab fa-facebook-f"></i></a>
                <a href="<%-contact_info.twitter%>"><i class="fab fa-twitter"></i></a>
                <a href="<%-contact_info.instagram%>"><i class="fab fa-instagram"></i></a>
                <a href="<%-contact_info.Linkedin%>"><i class="fab fa-linkedin-in"></i></a>
            </div>
        </div>

        <div class="card" >
            <h2 class="section-title">Send a Message</h2>
            <form id="contactForm">
                <div class="form-group">
                    <input type="text" id="name" placeholder=" " required />
                    <label for="name">Your Name</label>
                </div>
                <div class="form-group">
                    <input type="email" id="email" placeholder=" " required />
                    <label for="email">Email Address</label>
                </div>
                <div class="form-group">
                    <input type="text" id="subject" placeholder=" " required />
                    <label for="subject">Subject</label>
                </div>
                <div class="form-group">
                    <textarea id="message" placeholder=" " required></textarea>
                    <label for="message">Your Message</label>
                </div>
                <button type="submit" class="btn"><i class="fas fa-paper-plane"></i> Send Message</button>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById("contactForm").addEventListener("submit", function(e) {
        e.preventDefault();

        const name = document.getElementById("name").value;
        const email = document.getElementById("email").value;
        const subject = document.getElementById("subject").value;
        const message = document.getElementById("message").value;

        if (!name || !email || !subject || !message) {
            alert("Please fill in all fields");
            return;
        }

        alert(`Thank you, ${name}! Your message regarding "${subject}" has been sent. We'll contact you at ${email} soon.`);
        this.reset();
    });
</script>

