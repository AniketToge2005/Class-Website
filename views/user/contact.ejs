    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Open+Sans:wght@300;400;600&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3f37c9;
            --accent: #4cc9f0;
            --light: #f8f9fa;
            --dark: #212529;
            --gray: #6c757d;
            --shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            --radius: 10px;
        }
        
        * { 
            margin: 0; 
            padding: 0; 
            box-sizing: border-box; 
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f5f7fa, #e4edf5);
            color: var(--dark);
            position: relative;
            overflow-x: hidden;
        }
        
        .container {
            max-width: 1100px;
            margin: auto;
            display: flex;
            flex-direction: column;
            gap: 30px;
            position: relative;
            z-index: 2;
        }
        
        header, footer {
            text-align: center;
        }
        
        header h1 {
            color: var(--secondary);
            font-size: 2rem;
            margin-top: 20px;
        }
        
        .contact-area {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        
        .card {
            flex: 1 1 350px;
            background: #fff;
            padding: 25px;
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            animation: fadeIn 0.5s ease-in-out;
            position: relative;
            z-index: 2;
            background-color: rgba(255, 255, 255, 0.9);
        }
        
        .section-title {
            font-size: 1.4rem;
            color: var(--secondary);
            margin-bottom: 15px;
            border-bottom: 2px solid var(--accent);
            display: inline-block;
        }
        
        .info-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 15px;
        }
        
        .info-item i {
            background: var(--primary);
            color: white;
            padding: 10px;
            border-radius: 50%;
            margin-right: 12px;
            min-width: 40px;
            text-align: center;
        }
        
        .info-item p {
            margin: 5px 0;
            color: var(--gray);
        }
        
        .social-links {
            margin-top: 20px;
            display: flex;
            gap: 10px;
        }
        
        .social-links a {
            background: #e9ecef;
            color: var(--dark);
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            transition: 0.3s;
        }
        
        .social-links a:hover {
            background: var(--primary);
            color: white;
            transform: translateY(-2px);
        }
        
        /* Form styles */
        .animated-form {
            animation: fadeInSlide 0.8s ease-out;
        }
        
        @keyframes fadeInSlide {
            0% { opacity: 0; transform: translateY(30px); }
            100% { opacity: 1; transform: translateY(0); }
        }
        
        .form-group {
            position: relative;
            margin-bottom: 25px;
            margin-top: 35px;
        }
        
        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 14px 12px;
            font-size: 15px;
            border: 2px solid #ccc;
            border-radius: 8px;
            background: #fefefe;
            transition: border-color 0.3s, box-shadow 0.3s;
        }
        
        .form-group textarea {
            min-height: 100px;
            resize: vertical;
        }
        
        .form-group input:focus,
        .form-group textarea:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(67, 97, 238, 0.1);
            outline: none;
        }
        
        /* Floating Label */
        .form-group label {
            position: absolute;
            top: 50%;
            left: 12px;
            transform: translateY(-50%);
            color: var(--gray);
            font-size: 14px;
            background: white;
            padding: 0 5px;
            pointer-events: none;
            transition: 0.3s ease;
        }
        
        .form-group input:focus + label,
        .form-group input:not(:placeholder-shown) + label,
        .form-group textarea:focus + label,
        .form-group textarea:not(:placeholder-shown) + label {
            top: -10px;
            left: 10px;
            font-size: 12px;
            color: var(--primary);
            background: #fff;
        }
        
        /* Button styles */
        .btn {
            position: relative;
            overflow: hidden;
            transition: background 0.4s, transform 0.2s;
            padding: 12px 25px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            border: none;
            border-radius: var(--radius);
            font-weight: bold;
            cursor: pointer;
            width: 100%;
        }
        
        .btn:hover {
            transform: translateY(-2px);
        }
        
        .btn::after {
            content: "";
            position: absolute;
            top: 0; 
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(11, 74, 209, 0.509);
            transform: translateX(-100%);
            transition: transform 0.4s;
        }
        
        .btn:hover::after {
            transform: translateX(0);
        }
        
        .map {
            height: 350px;
            border: none;
            width: 100%;
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            position: relative;
            z-index: 2;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        @media (max-width: 768px) {
            header h1 { font-size: 1.6rem; }
            .contact-area {
                flex-direction: column;
            }
        }

        .header {
            position: relative;
            text-align: center;
            background: linear-gradient(45deg, #405DE6, #833AB4, #C13584, #E1306C, #F56040);
            color: white;
            padding-top: 20px;
            height: 180px;
        }

        .header h1 {
            margin-top: 60px;
        }

        .waves {
            position: relative;
            width: 100%;
            height: 50px;
        }

        .parallax > use {
            animation: move-forever 25s cubic-bezier(.55, .5, .45, .5) infinite;
        }

        .parallax > use:nth-child(1) {
            animation-delay: -2s;
            animation-duration: 7s;
        }
        .parallax > use:nth-child(2) {
            animation-delay: -3s;
            animation-duration: 10s;
        }
        .parallax > use:nth-child(3) {
            animation-delay: -4s;
            animation-duration: 13s;
        }
        .parallax > use:nth-child(4) {
            animation-delay: -5s;
            animation-duration: 20s;
        }

        @keyframes move-forever {
            0% { transform: translate3d(-90px,0,0); }
            100% { transform: translate3d(85px,0,0); }
        }

        /* Floating bubbles animation */
        .area {
            background: transparent;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
            pointer-events: none;
        }

        .circles {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        .circles li {
            position: absolute;
            list-style: none;
            animation: animate 25s linear infinite;
            bottom: -150px;
            border-radius: 50%;
            opacity: 0.2;
        }

        .circles li:nth-child(1) { left: 25%; width: 80px; height: 80px; background:#a0ab4269; animation-delay: 0s; }
        .circles li:nth-child(2) { left: 10%; width: 20px; height: 20px; background:#833ab456; animation-delay: 2s; animation-duration: 12s; }
        .circles li:nth-child(3) { left: 70%; width: 20px; height: 20px; background:#c135844f; animation-delay: 4s; }
        .circles li:nth-child(4) { left: 40%; width: 60px; height: 60px; background:#f561404c; animation-delay: 0s; animation-duration: 18s; }
        .circles li:nth-child(5) { left: 65%; width: 20px; height: 20px; background:#f5614048; animation-delay: 0s; }
        .circles li:nth-child(6) { left: 75%; width: 110px; height: 110px; background: #405ce63f; animation-delay: 3s; }
        .circles li:nth-child(7) { left: 35%; width: 150px; height: 150px; background:#833ab444; animation-delay: 7s; }
        .circles li:nth-child(8) { left: 50%; width: 25px; height: 25px; background: #c1358450; animation-delay: 15s; animation-duration: 45s; }
        .circles li:nth-child(9) { left: 20%; width: 15px; height: 15px; background:#e1306b53; animation-delay: 2s; animation-duration: 35s; }
        .circles li:nth-child(10){ left:85%; width:150px; height:150px; background:#f561403a; animation-delay: 0s; animation-duration:11s; }

        @keyframes animate {
            0% { transform: translateY(0) rotate(0deg); opacity: 1; border-radius: 0; }
            100% { transform: translateY(-1000px) rotate(720deg); opacity: 0; border-radius: 50%; }
        }
    </style>
</head>
<body>
    <!-- Animated Header with Waves -->
    <div class="header">
        <div class="inner-header flex">
            <h1 class="font-weight-bold">Contact</h1>
        </div>
        <svg class="waves" xmlns="http://www.w3.org/2000/svg" viewBox="0 24 150 28" preserveAspectRatio="none">
            <defs>
                <path id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z" />
            </defs>
            <g class="parallax">
                <use xlink:href="#gentle-wave" x="48" y="0" fill="rgba(255,255,255,0.7)" />
                <use xlink:href="#gentle-wave" x="48" y="3" fill="rgba(255,255,255,0.5)" />
                <use xlink:href="#gentle-wave" x="48" y="5" fill="rgba(255,255,255,0.3)" />
                <use xlink:href="#gentle-wave" x="48" y="7" fill="#fff" />
            </g>
        </svg>
    </div>

    <!-- Floating Bubbles Background -->
    <div class="area">
        <ul class="circles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="container">
        <header>
            <div class="logo"><i class="fas fa-graduation-cap fa-2x" style="color: var(--primary);"></i></div>
            <h1>Class Portal</h1>
            <p>Reach out to us with any questions or feedback.</p>
        </header>

        <div class="contact-area">
            <div class="card">
                <h2 class="section-title">Get In Touch</h2>
                <div class="info-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <div>
                        <p>Room 305, 123 University Ave</p>
                        <p>Boston, MA 02115</p>
                    </div>
                </div>
                <div class="info-item">
                    <i class="fas fa-phone-alt"></i>
                    <div>
                        <p>Main: (617) 555-0123</p>
                        <p>Support: (617) 555-0456</p>
                    </div>
                </div>
                <div class="info-item">
                    <i class="fas fa-envelope"></i>
                    <div>
                        <p>info@classportal.edu</p>
                        <p>support@classportal.edu</p>
                    </div>
                </div>
                <div class="info-item">
                    <i class="fas fa-clock"></i>
                    <div>
                        <p>Mon-Fri: 8AM–6PM</p>
                        <p>Sat: 9AM–3PM | Sun: Closed</p>
                    </div>
                </div>
                <div class="social-links">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>

            <div class="card animated-form">
                <h2 class="section-title">Send a Message</h2>
                <form id="contactForm">
                    <div class="form-group">
                        <input type="text" id="name" placeholder=" " required />
                        <label for="name">Your Name</label>
                    </div>
                    <div class="form-group">
                        <input type="email" id="email" placeholder=" " required />
                        <label for="email">Email Address</label>
                    </div>
                    <div class="form-group">
                        <input type="text" id="subject" placeholder=" " required />
                        <label for="subject">Subject</label>
                    </div>
                    <div class="form-group">
                        <textarea id="message" placeholder=" " required></textarea>
                        <label for="message">Your Message</label>
                    </div>
                    <button type="submit" class="btn"><i class="fas fa-paper-plane"></i> Send</button>
                </form>
            </div>
        </div>
        
        <iframe class="map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2948.689449366457!2d-71.09772582352759!3d42.34602667118541!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89e37a0e8c5535ef%3A0x813cd3575a5a4ab0!2sBoston%20University!5e0!3m2!1sen!2sus!4v1691872409645!5m2!1sen!2sus" allowfullscreen="" loading="lazy"></iframe>

       
    </div>

    <script>
        document.getElementById("contactForm").addEventListener("submit", function(e) {
            e.preventDefault();
            const name = document.getElementById("name").value;
            const email = document.getElementById("email").value;
            const subject = document.getElementById("subject").value;
            alert(`Thank you, ${name}! Your message regarding "${subject}" has been sent. We'll reach out to ${email} soon.`);
            this.reset();
        });
    </script>

