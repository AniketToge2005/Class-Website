<%- include("navbar") %>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="/css/contact.css">

<style>
    
</style>

<div class="contact-banner" style="margin-top: -45px;">
    <h1>Get in Touch With Us</h1>
    <p>Reach out to us with any questions or feedback.</p>
</div>

<div class="contact-container mb-4">
    <div class="contact-area">
        <div class="card">
            <h2 class="section-title">Get In Touch</h2>
            <div class="info-item">
                <i class="fas fa-map-marker-alt"></i>
                <div>
                    <p><%-contact_info.address%></p>
                    <p>Boston, MA 02115</p>
                </div>
            </div>
            <div class="info-item">
                <i class="fas fa-phone-alt"></i>
                <div>
                    <p>Main: (+91) <%-contact_info.phone%></p>
                    <p>Support: (+91) 7249329153</p>
                </div>
            </div>
            <div class="info-item">
                <i class="fas fa-envelope"></i>
                <div>
                    <p><%-contact_info.email%></p>
                </div>
            </div>
            <div class="info-item">
                <i class="fas fa-clock"></i>
                <div>
                    <p>Mon-Fri: 8AMâ€“6PM</p>
                    <p><%-contact_info.work_time%></p>
                </div>
            </div>
            <div class="social-links">
                <a href="<%-contact_info.facebook%>"><i class="fab fa-facebook-f"></i></a>
                <a href="<%-contact_info.twitter%>"><i class="fab fa-twitter"></i></a>
                <a href="<%-contact_info.instagram%>"><i class="fab fa-instagram"></i></a>
                <a href="<%-contact_info.Linkedin%>"><i class="fab fa-linkedin-in"></i></a>
            </div>
        </div>

        <div class="card" >
            <h2 class="section-title">Send a Message</h2>
            <form id="contactForm">
                <div class="form-group">
                    <input type="text" id="name" placeholder=" " required />
                    <label for="name">Your Name</label>
                </div>
                <div class="form-group">
                    <input type="email" id="email" placeholder=" " required />
                    <label for="email">Email Address</label>
                </div>
                <div class="form-group">
                    <input type="text" id="subject" placeholder=" " required />
                    <label for="subject">Subject</label>
                </div>
                <div class="form-group">
                    <textarea id="message" placeholder=" " required></textarea>
                    <label for="message">Your Message</label>
                </div>
                <button type="submit" class="btn"><i class="fas fa-paper-plane"></i> Send Message</button>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById("contactForm").addEventListener("submit", function(e) {
        e.preventDefault();

        const name = document.getElementById("name").value;
        const email = document.getElementById("email").value;
        const subject = document.getElementById("subject").value;
        const message = document.getElementById("message").value;

        if (!name || !email || !subject || !message) {
            alert("Please fill in all fields");
            return;
        }

        alert(`Thank you, ${name}! Your message regarding "${subject}" has been sent. We'll contact you at ${email} soon.`);
        this.reset();
    });
</script>

