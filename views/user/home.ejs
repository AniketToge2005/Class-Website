}

/* Active slide: fully visible & back to normal scale */
.slide.active {
  opacity: 1;
  transform: scale(1);
  z-index: 1;
}

/* Dark gradient overlay to ensure text legibility */
.slide::after {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(90deg, rgba(0,0,0,0.7), rgba(0,0,0,0.3));
  z-index: -1;
