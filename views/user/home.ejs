    <script>
      // Carousel logic for toppers section
      document.addEventListener('DOMContentLoaded', function() {
        const cards = Array.from(document.querySelectorAll('.toppers-carousel-row .topper-card'));
        const prevBtn = document.querySelector('.toppers-carousel-btn.prev');
        const nextBtn = document.querySelector('.toppers-carousel-btn.next');
        const visibleCount = 4;
        let startIdx = 0;
    
        function updateCarousel() {
          cards.forEach((card, idx) => {
            if (idx >= startIdx && idx < startIdx + visibleCount) {
              card.classList.remove('hide');
            } else {
              card.classList.add('hide');
            }
          });
          // Show/hide prev/next buttons
          if (cards.length <= visibleCount) {
            prevBtn.style.display = 'none';
            nextBtn.style.display = 'none';
          } else {
            prevBtn.style.display = '';
            nextBtn.style.display = '';
            // Hide prev if at start, hide next if at end (unless looping)
            // But as per prompt, always round loop, so always show both
          }
        }
    
        function showPrev() {
          startIdx = (startIdx - visibleCount + cards.length) % cards.length;
          updateCarousel();
        }
    
        function showNext() {
          startIdx = (startIdx + visibleCount) % cards.length;
          updateCarousel();
        }
    
        prevBtn.addEventListener('click', showPrev);
        nextBtn.addEventListener('click', showNext);
    
        // Responsive: show less cards on small screens
        function getVisibleCount() {
          if (window.innerWidth < 600) return 1;
          if (window.innerWidth < 900) return 2;
          if (window.innerWidth < 1200) return 3;
          return 4;
        }
    
        function handleResize() {
          // recalculate visibleCount and adjust startIdx if needed
          let newVisible = getVisibleCount();
          if (visibleCount !== newVisible) {
            startIdx = 0;
          }
          updateCarousel();
        }
    
        // For this implementation, visibleCount is fixed at 4 as per prompt.
        updateCarousel();
    
        // Optionally, enable responsive visibleCount:
        // window.addEventListener('resize', handleResize);
      });
    </script>











