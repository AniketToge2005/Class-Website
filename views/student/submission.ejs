<%- include("navbar.ejs") %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin - Upload Assignment</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #4361ee;
      --secondary: #3f37c9;
      --accent: #4cc9f0;
      --light: #f8f9fa;
      --dark: #212529;
      --gray: #6c757d;
      --radius: 12px;
      --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    body {
      background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
      font-family: 'Poppins', sans-serif;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .upload-section {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem 1rem;
    }

    .assignment-card {
      background: #fff;
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      width: 100%;
      max-width: 800px;
      overflow: hidden;
      animation: fadeIn 0.6s ease-in-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .card-header {
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      color: white;
      padding: 1.75rem;
      text-align: center;
    }

    .card-header h2 {
      margin: 0;
      font-size: 1.8rem;
    }

    .card-subtitle {
      font-size: 1rem;
      opacity: 0.9;
    }

    .card-body {
      padding: 2rem;
    }

    .form-label i {
      margin-right: 0.5rem;
      color: var(--primary);
    }

    .form-control, .form-select {
      border-radius: 8px;
      border: 1px solid #dcdfe3;
      font-size: 0.95rem;
    }

    .form-control:focus, .form-select:focus {
      border-color: var(--primary);
      box-shadow: 0 0 0 0.2rem rgba(67, 97, 238, 0.2);
    }

    .file-upload-label {
      border: 2px dashed #dcdfe3;
      border-radius: 8px;
      text-align: center;
      padding: 2rem;
      cursor: pointer;
      background-color: #f9fafb;
      transition: all 0.3s ease;
    }

    .file-upload-label:hover {
      border-color: var(--primary);
      background-color: rgba(67, 97, 238, 0.05);
    }

    .file-upload-label i {
      font-size: 2rem;
      margin-bottom: 0.5rem;
      color: var(--primary);
    }

    .submit-btn {
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      border: none;
      color: white;
      padding: 0.8rem 1rem;
      font-weight: 600;
      border-radius: 8px;
      width: 100%;
      transition: 0.3s ease;
    }

    .submit-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
    }

    @media (max-width: 576px) {
      .card-body { padding: 1.25rem; }
    }
  </style>
</head>
<body>
  <div class="upload-section">
    <div class="assignment-card">
      <div class="card-header">
        <h2><i class="fas fa-file-upload"></i> Upload Assignment</h2>
        <p class="card-subtitle">Distribute assignments to students</p>
      </div>
      <div class="card-body">
        <form action="/admin/upload-assignment" method="POST" enctype="multipart/form-data">
          <div class="row g-4">
            <div class="col-md-6">
              <label for="assignmentTitle" class="form-label"><i class="fas fa-heading"></i> Title</label>
              <input type="text" id="assignmentTitle" name="assignmentTitle" class="form-control" required>
            </div>

            <div class="col-md-6">
              <label for="subject" class="form-label"><i class="fas fa-book"></i> Subject</label>
              <input type="text" id="subject" name="subject" class="form-control" required>
            </div>

            <div class="col-md-6">
              <label for="class" class="form-label"><i class="fas fa-users"></i> Class</label>
              <select id="class" name="class" class="form-select" required>
                <option value="" disabled selected>Select class</option>
                <option>FYBSc</option>
                <option>SYBSc</option>
                <option>TYBSc</option>
                <option>FYBA</option>
                <option>SYBA</option>
                <option>TYBA</option>
              </select>
            </div>

            <div class="col-md-6">
              <label for="dueDate" class="form-label"><i class="fas fa-calendar-alt"></i> Deadline</label>
              <input type="datetime-local" id="dueDate" name="dueDate" class="form-control" required>
            </div>

            <div class="col-12">
              <label for="description" class="form-label"><i class="fas fa-align-left"></i> Description</label>
              <textarea id="description" name="description" rows="4" class="form-control" required></textarea>
            </div>

            <div class="col-12">
              <label for="assignmentFile" class="form-label"><i class="fas fa-paperclip"></i> Upload File</label>
              <label for="assignmentFile" class="file-upload-label">
                <i class="fas fa-cloud-upload-alt"></i>
                <div>Click to upload or drag & drop</div>
                <small>PDF, DOC, DOCX (Max. 10MB)</small>
                <input type="file" id="assignmentFile" name="assignmentFile" class="d-none" accept=".pdf,.doc,.docx" required>
              </label>
            </div>

            <div class="col-12">
              <button type="submit" class="submit-btn">
                <i class="fas fa-upload me-2"></i> Upload
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <%- include("footer.ejs") %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
