<body>
<div class="profile-container">
    <div class="profile-header">
        <h1>My Profile</h1>
        <p>Manage your account information</p>
        <div class="profile-pic">
            <i class="fas fa-user"></i>
        </div>
    </div>
    
    <div class="profile-content">
        <div class="profile-section">
            <h2 class="section-title">
                <i class="fas fa-user-circle"></i> Personal Information
            </h2>
            
            <div class="info-card">
                <div class="info-icon">
                    <i class="fas fa-user"></i>
                </div>
                <div class="info-content">
                    <div class="info-label">Username</div>
                    <div class="info-value">Rajesh Aghav</div>
                </div>
            </div>
            
            <div class="info-card">
                <div class="info-icon">
                    <i class="fas fa-envelope"></i>
                </div>
                <div class="info-content">
                    <div class="info-label">Email Address</div>
                    <div class="info-value">rajeshaghav@gmail.com</div>
                </div>
            </div>
            
            <div class="info-card">
                <div class="info-icon">
                    <i class="fas fa-phone"></i>
                </div>
                <div class="info-content">
                    <div class="info-label">Mobile Number</div>
                    <div class="info-value">+1 9876543210</div>
                </div>
            </div>
        </div>
        
        <div class="profile-section">
            <h2 class="section-title">
                <i class="fas fa-lock"></i> Security
            </h2>
            
            <div class="info-card">
                <div class="info-icon">
                    <i class="fas fa-key"></i>
                </div>
                <div class="info-content">
                    <div class="info-label">Password</div>
                    <div class="info-value">
                        ••••••••
                        <button class="password-toggle" onclick="togglePassword()">
                            <i class="fas fa-eye"></i> Show
                        </button>
                    </div>
                </div>
            </div>
            
             
        </div>
        
        <div class="action-buttons">
            <button class="btn btn-danger">
                <i class="fas fa-"></i> Cancel
            </button>
            <button class="btn btn-primary">
                <i class="fas fa-check"></i> Save Changes
            </button>
        </div>
    </div>
</div>

<script>
    function togglePassword() {
        const toggleBtn = document.querySelector('.password-toggle');
        const passwordField = document.querySelector('.info-value');
        const eyeIcon = toggleBtn.querySelector('i');
        
        if (toggleBtn.innerHTML.includes('Show')) {
            passwordField.innerHTML = 'mysecretpassword123 <button class="password-toggle"><i class="fas fa-eye-slash"></i> Hide</button>';
        } else {
            passwordField.innerHTML = '•••••••• <button class="password-toggle"><i class="fas fa-eye"></i> Show</button>';
        }
        
        // Reattach event listener
        document.querySelector('.password-toggle').addEventListener('click', togglePassword);
    }
    
    // Add event listeners to buttons for visual feedback
    document.querySelectorAll('.btn').forEach(button => {
        button.addEventListener('click', function() {
            this.classList.add('clicked');
            setTimeout(() => {
                this.classList.remove('clicked');
            }, 300);
        });
    });
</script>
</body>
