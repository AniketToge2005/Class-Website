<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
   body {
     background: white;
     display: flex;
     justify-content: center;
     align-items: flex-start; /* Move content toward the top */
     padding: 20px;
     margin-top: 40px; /* Add top margin to push container down */
    }

    .profile-container {
      max-height: none;    /* Remove the max-height limitation */
      min-width: 500px;
      background: white;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
    }

    .profile-header {
        background: linear-gradient(to right, #4776E6, #8E54E9);
        padding: 30px 20px 60px;
        text-align: center;
        color: white;
        position: relative;
    }
    
    .profile-header h1 {
        font-size: 1.8rem;
        font-weight: 600;
        margin-top: 10px;
    }
    
    .profile-header p {
        opacity: 0.9;
        font-size: 0.95rem;
    }
    
    .profile-pic {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 5px solid white;
        position: absolute;
        bottom: -60px;
        left: 50%;
        transform: translateX(-50%);
        overflow: hidden;
        background: #f0f0f0;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }
    
    .profile-pic img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .profile-pic i {
        font-size: 3rem;
        color: #bbb;
    }
    
    .profile-content {
        padding: 80px 25px 30px;
    }
    
    .profile-section {
        margin-bottom: 30px;
    }
    
    .section-title {
        font-size: 1.1rem;
        color: #8E54E9;
        margin-bottom: 15px;
        padding-bottom: 8px;
        border-bottom: 1px solid #eee;
        display: flex;
        align-items: center;
    }
    
    .section-title i {
        margin-right: 10px;
        font-size: 1.2rem;
    }
    
    .info-card {
        background: #f9f9ff;
        border-radius: 15px;
        padding: 18px 20px;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
        border: 1px solid #eee;
    }
    
    .info-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(142, 84, 233, 0.1);
        border-color: #e0d6ff;
    }
    
    .info-icon {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        background: #e8e3ff;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        font-size: 1.2rem;
        color: #8E54E9;
    }
    
    .info-content {
        flex: 1;
    }
    
    .info-label {
        font-size: 0.85rem;
        color: #888;
        margin-bottom: 3px;
    }
    
    .info-value {
        font-size: 1.1rem;
        font-weight: 500;
        color: #333;
    }
    
    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }
    
    .btn {
        flex: 1;
        padding: 15px;
        border: none;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }
    
    .btn-primary {
        background: linear-gradient(to right, #4776E6, #8E54E9);
        color: white;
        box-shadow: 0 4px 15px rgba(71, 118, 230, 0.3);
    }
    
    .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 7px 20px rgba(71, 118, 230, 0.4);
    }
    
    .btn-outline {
        background: transparent;
        border: 2px solid #8E54E9;
        color: #8E54E9;
    }
    
    .btn-outline:hover {
        background: #f5f2ff;
        transform: translateY(-3px);
    }
    
    .password-toggle {
        background: none;
        border: none;
        color: #888;
        cursor: pointer;
        font-size: 0.9rem;
        margin-left: 10px;
    }
    
    .password-toggle:hover {
        color: #8E54E9;
    }
    
    /* Responsive design */
    @media (max-width: 500px) {
        .profile-container {
            border-radius: 15px;
        }
        
        .profile-header {
            padding: 25px 15px 50px;
        }
        
        .profile-pic {
            width: 100px;
            height: 100px;
            bottom: -50px;
        }
        
        .profile-content {
            padding: 70px 20px 25px;
        }
        
        .action-buttons {
            flex-direction: column;
            gap: 10px;
        }
    }
</style>
