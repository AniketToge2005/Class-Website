<%- include("navbar") %>

<style>
  .card-header{
    background: linear-gradient(135deg, #2c3e50, #3498db); color: #fff; 
  }


/* form css */
  

  .form-group {
    margin-bottom: 16px;
  }

  .form-group label {
    font-weight: 600;
    margin-bottom: 6px;
    display: block;
    color: #333;
  }

  .form-card .card-header {
    background: linear-gradient(135deg, #2c3e50, #3498db);
    color: #fff;
    padding: 15px 20px;
    border-radius: 10px 10px 0 0;
  }

  .form-group {
    margin-bottom: 16px;
  }

   

  .form-control {
    border: 2px solid #e1e5e9;
    border-radius: 6px;
    transition: border-color 0.3s ease;
  }

  .form-control:focus {
    border-color: #3498db;
    outline: none;
    box-shadow: none;
  }

  button[type="submit"] {
    background: linear-gradient(135deg, #021827, #3498db);
    color: #fff;
    padding: 12px 20px;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    transition: transform 0.2s ease;
    width: 100%;
  }

  button[type="submit"]:hover {
    transform: translateY(-2px);
  }
  label{
    font-family: sans-serif;
  }



  /* photo upload css */

  <style>
  .simple-upload {
    text-align: center;
    margin-bottom: 20px;
  }

  .upload-label {
    display: inline-block;
    padding: 10px 20px;
    background: #3498db;
    color: #fff;
    border-radius: 6px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 500;
    transition: background 0.3s;
  }

  .upload-label:hover {
    background: #2980b9;
  }

  .simple-upload input[type="file"] {
    display: none;
  }

  .img-preview img {
    margin-top: 15px;
    max-width: 150px;
    border-radius: 8px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  }

</style>

  
</style>

<div class="dashboard-title">
  <h2>Study Materials</h2>
  <div class="role-badge teacher">Teacher</div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h3>Upload Study Material</h3>
        </div>
        <div class="card-body">
          <form action="/teacher/upload-material" method="POST" enctype="multipart/form-data">
           <div class="row">
            <div class="col-md-6">
              <label for="title">Title</label>
              <input type="text" class="form-control" placeholder="Title..." name="title" required>
            </div>
            <div class="col-md-6">
              <label for="subject">Subject</label>
              <input type="text" class="form-control" placeholder="Subject..." name="subject" required>
            </div>
          </div><br>
          <div class="col-md-8">
            <div class="simple-upload">
              <label for="imageUpload" class="upload-label">
                <i class="fas fa-image"></i> Upload Image
              </label>
              <input type="file" id="imageUpload" accept="image/*" onchange="previewSimpleImage(event)">
              <div class="img-preview">
                <img id="simplePreview" style="display: none;" />
              </div>
            </div>
            
            
          </div><br><br>
            <button type="submit" class="btn btn-primary w-50">Upload Material</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>



<%- include("footer") %> 