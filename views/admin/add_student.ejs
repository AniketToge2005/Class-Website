<%-include("navbar")%>
<style>
    /* Scope all under .registration-section */
    .registration-section {
      padding: 4rem 1rem;
      background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
    }
    .registration-section .reg-header {
      text-align: center;
      margin-bottom: 2rem;
    }
    .reg-header h1 {
      font-size: 2.5rem;
      color: #4361ee;
    }
    .reg-header p {
      color: #6c757d;
      font-size: 1.1rem;
    }
  
    .reg-content {
      display: flex;
      max-width: 1000px;
      margin: auto;
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
      overflow: hidden;
      
    }
    .reg-form, .reg-sidebar {
      flex: 1;
      padding: 2rem;
    }
    .reg-form { max-width: 600px; }
    .reg-form h2 {
      margin-bottom: 1.5rem;
      color: #4361ee;
      font-size: 1.8rem;
      border-bottom: 3px solid #4895ef;
      display: inline-block;
      padding-bottom: 0.3rem;
    }
    .form-group {
      margin-bottom: 1.5rem;
      position: relative;
    }
    .form-group label {
      font-weight: 600;
      margin-bottom: 0.4rem;
      display: flex; align-items: center;
    }
    .form-group label i {
      margin-right: 0.5rem;
      color: #4361ee;
    }
    .form-group input,
    .form-group select,
    .form-group textarea {
      width: 100%;
      padding: 0.8rem 1rem;
      border: 2px solid #e9ecef;
      border-radius: 10px;
      font-size: 1rem;
      transition: all .3s ease;
    }
    .form-group input:focus,
    .form-group select:focus,
    .form-group textarea:focus {
      border-color: #4895ef;
      box-shadow: 0 0 0 3px rgba(67,97,238,0.2);
      outline: none;
    }
    .photo-preview {
      margin-top: 1rem;
      display: none;
      text-align: center;
    }
    .photo-preview img {
      width: 100px; height: 100px;
      border-radius: 50%;
      object-fit: cover;
      border: 3px solid #4895ef;
    }
    .btn-group {
      display: flex;
      gap: 1rem;
      margin-top: 1rem;
    }
    .btn {
      flex: 1;
      padding: 0.8rem;
      font-weight: 600;
      border-radius: 10px;
      cursor: pointer;
      display: flex; justify-content: center; align-items: center;
      transition: all .3s ease;
    }
    .btn-submit {
      background: linear-gradient(90deg, #4361ee, #3f37c9);
      color: #fff;
    }
    .btn-submit:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(67,97,238,0.4);
    }
    .btn-reset {
      background: #e9ecef;
      color: #6c757d;
    }
    .btn-reset:hover {
      background: #dee2e6;
    }
  
    .reg-sidebar {
      background: linear-gradient(135deg, #4361ee, #3f37c9);
      color: #fff;
      display: flex; align-items: center; justify-content: center;
    }
    .sidebar-content { text-align: center; }
    .sidebar-icon {
      font-size: 4rem;
      margin-bottom: 1rem;
      animation: float 3s ease-in-out infinite;
    }
    .sidebar-content h3 {
      margin-bottom: 1rem;
      font-size: 1.6rem;
    }
    .features {
      list-style: none;
      padding: 0;
      text-align: left;
      display: inline-block;
    }
    .features li {
      margin-bottom: 0.8rem;
      display: flex; align-items: center;
    }
    .features li i {
      margin-right: 0.5rem;
    }
  
    .notification {
      position: fixed;
      top: 20px; right: 20px;
      background: #fff;
      padding: 1rem 1.5rem;
      border-radius: 10px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
      transform: translateX(120%);
      transition: transform .4s ease;
      display: flex; align-items: center;
      z-index: 1000;
    }
    .notification.show { transform: translateX(0); }
    .notification .progress-bar {
      position: absolute; bottom: 0; left: 0;
      height: 4px;
      background: #4895ef;
      width: 100%;
      animation: progress 3s linear forwards;
    }
  
    @keyframes float {
      0%,100% { transform: translateY(0); }
      50% { transform: translateY(-8px); }
    }
    @keyframes progress {
      from { width: 100%; }
      to   { width: 0; }
    }
  
    /* Responsive */
    @media (max-width: 768px) {
      .reg-content { flex-direction: column; }
      .reg-sidebar { order: -1; padding: 1.5rem; }
    }
  </style>
<section class="registration-section">
    <div class="reg-header">
      <h1>Student Registration Portal</h1>
      <p>Join our educational community and unlock new learning opportunities</p>
    </div>
  
    <div class="reg-content">
      <div class="reg-form">
        <h2>Registration Form</h2>
        <!-- Add novalidate to allow JS validation, but not required for POST -->
        <form action="/admin/save_student" method="post" id="registrationForm" enctype="multipart/form-data" autocomplete="off">
          <div class="form-group">
            <label for="name"><i class="fas fa-user"></i> Full Name *</label>
            <input type="text" id="name" name="std_name" required placeholder="Your full name" autocomplete="off"/>
          </div>
          <div class="form-group">
            <label for="phone"><i class="fas fa-phone"></i> Phone *</label>
            <input type="tel" id="phone" name="std_phone" required placeholder="Your phone number" autocomplete="off"/>
          </div>
          <div class="form-group">
            <label for="email"><i class="fas fa-envelope"></i> Email *</label>
            <input type="email" id="email" name="std_email" required placeholder="Your email" autocomplete="off"/>
          </div>
          <div class="form-group">
            <label for="school"><i class="fas fa-school"></i> School Name *</label>
            <input type="text" id="school" name="std_sc" required placeholder="Your school" autocomplete="off"/>
          </div>
          <div class="form-group">
            <label for="photo"><i class="fas fa-camera"></i> Photo</label>
            <input type="file" id="photo" name="std_photo" accept="image/*"/>
            <div class="photo-preview" id="photoPreview">
              <img id="previewImage" src="#" alt="Preview"/>
            </div>
          </div>
          <div class="form-group">
            <label for="dob"><i class="fas fa-calendar"></i> Date of Birth *</label>
            <input type="date" id="dob" name="std_dob" required />
          </div>
          <div class="form-group">
            <label for="standard"><i class="fas fa-graduation-cap"></i> Class *</label>
            <select id="standard" name="std_class" required >
              <option value="">Select</option>
              <option value="5th">5th</option>
              <option value="6th">6th</option>
              <option value="7th">7th</option>
              <option value="8th">8th</option>
              <option value="9th">9th</option>
              <option value="10th">10th</option>
              <option value="11th">11th</option>
              <option value="12th">12th</option>
            </select>
          </div>
          <div class="form-group">
            <label for="address"><i class="fas fa-home"></i> Address *</label>
            <textarea id="address" name="std_address" rows="3" required placeholder="Your address" autocomplete="off"></textarea>
          </div>
          <div class="btn-group">
            <button type="submit" class="btn btn-submit">
              <i class="fas fa-paper-plane"></i> Register
            </button>
            <button type="reset" class="btn btn-reset">
              <i class="fas fa-undo"></i> Reset
            </button>
          </div>
        </form>
      </div>
  
      <aside class="reg-sidebar">
        <div class="sidebar-content">
          <i class="fas fa-graduation-cap sidebar-icon"></i>
          <h3>Why Register With Us?</h3>
          <ul class="features">
            <li><i class="fas fa-check-circle"></i> Premium resources</li>
            <li><i class="fas fa-check-circle"></i> Personalized dashboard</li>
            <li><i class="fas fa-check-circle"></i> Expert mentorship</li>
            <li><i class="fas fa-check-circle"></i> Scholarship info</li>
            <li><i class="fas fa-check-circle"></i> Career guidance</li>
          </ul>
        </div>
      </aside>
    </div>
  
    <div class="notification" id="notification">
      <i class="fas fa-check-circle"></i>
      <div>
        <strong>Registration Successful!</strong>
        <p>Student has been registered successfully!</p>
      </div>
      <div class="progress-bar"></div>
    </div>
  </section>
  
  
  
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const photoInput = document.getElementById('photo');
      const photoPreview = document.getElementById('photoPreview');
      const previewImage = document.getElementById('previewImage');
      
      // Photo preview functionality
      if (photoInput) {
        photoInput.addEventListener('change', () => {
          if (photoInput.files && photoInput.files[0]) {
            const reader = new FileReader();
            reader.onload = e => {
              previewImage.src = e.target.result;
              photoPreview.style.display = 'block';
            };
            reader.readAsDataURL(photoInput.files[0]);
          }
        });
      }
  
      const form = document.getElementById('registrationForm');
      const notification = document.getElementById('notification');
      
      // Show success message if redirected with success parameter
      var urlParams = new URLSearchParams(window.location.search);
      if (urlParams.get('success') === 'true') {
        setTimeout(() => {
          notification.classList.add('show');
          setTimeout(() => {
            notification.classList.remove('show');
          }, 3000);
        }, 500);
      }
      
      // Form submission handling
      if (form) {
        form.addEventListener('submit', e => {
          // Validate form before submission
          if (!form.checkValidity()) {
            e.preventDefault();
            alert('Please fill in all required fields marked with *');
            return;
          }
  
          // Fix: Remove any JS that would prevent default POST unless invalid
          // Show loading state
          const submitBtn = form.querySelector('.btn-submit');
          if (submitBtn) {
            const originalText = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Registering...';
            submitBtn.disabled = true;
          }
          // Allow form to POST as normal
        });
  
        // Real-time validation feedback
        const inputs = form.querySelectorAll('input[required], select[required], textarea[required]');
        inputs.forEach(input => {
          input.addEventListener('blur', () => {
            if (!input.checkValidity()) {
              input.style.borderColor = '#dc3545';
            } else {
              input.style.borderColor = '#28a745';
            }
          });
  
          input.addEventListener('input', () => {
            if (input.checkValidity()) {
              input.style.borderColor = '#28a745';
            } else {
              input.style.borderColor = '';
            }
          });
        });
      }
    });
  </script>
  <%-include("footer")%>