<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Class Monitor Activities</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #f0f2f5; }
    .form-section, .output-section {
        background: white;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        margin-top: 30px;
    }
    h2 { color: #343a40; }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="text-center my-4">Class Monitor Activities Form</h2>

    <!-- Form Start -->
    <div class="form-section">
      <form id="monitorForm">
        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label">Date</label>
            <input type="date" class="form-control" name="date" required>
          </div>
          <div class="col-md-6">
            <label class="form-label">Monitor Name</label>
            <input type="text" class="form-control" name="monitor" required>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label">Attendance Summary</label>
          <input type="text" class="form-control" name="attendance" placeholder="Ex: 40 present, 5 absent">
        </div>

        <div class="mb-3">
          <label class="form-label">Discipline Issues (if any)</label>
          <textarea class="form-control" name="discipline" rows="2"></textarea>
        </div>

        <div class="mb-3">
          <label class="form-label">Homework Submission Status</label>
          <input type="text" class="form-control" name="homework" placeholder="Ex: 35 submitted, 10 pending">
        </div>

        <div class="mb-3">
          <label class="form-label">Event/Activity Updates</label>
          <textarea class="form-control" name="event" rows="2"></textarea>
        </div>

        <div class="mb-3">
          <label class="form-label">Additional Notes</label>
          <textarea class="form-control" name="notes" rows="2"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit Activity</button>
      </form>
    </div>

    <!-- Output Table -->
    <div class="output-section" id="output" style="display: none;">
      <h4 class="mb-3">Submitted Activity Summary:</h4>
      <table class="table table-bordered">
        <tbody>
          <tr><th>Date</th><td id="outDate"></td></tr>
          <tr><th>Monitor</th><td id="outMonitor"></td></tr>
          <tr><th>Attendance</th><td id="outAttendance"></td></tr>
          <tr><th>Discipline</th><td id="outDiscipline"></td></tr>
          <tr><th>Homework</th><td id="outHomework"></td></tr>
          <tr><th>Event</th><td id="outEvent"></td></tr>
          <tr><th>Notes</th><td id="outNotes"></td></tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Script -->
  <script>
    const form = document.getElementById('monitorForm');
    form.addEventListener('submit', function(e) {
      e.preventDefault();

      document.getElementById('outDate').textContent = form.date.value;
      document.getElementById('outMonitor').textContent = form.monitor.value;
      document.getElementById('outAttendance').textContent = form.attendance.value;
      document.getElementById('outDiscipline').textContent = form.discipline.value;
      document.getElementById('outHomework').textContent = form.homework.value;
      document.getElementById('outEvent').textContent = form.event.value;
      document.getElementById('outNotes').textContent = form.notes.value;

      document.getElementById('output').style.display = 'block';
      form.reset();
    });
  </script>
</body>
</html>
