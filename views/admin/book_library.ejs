       <div class="container">
  <form>
    <div class="row border rounded-3 p-4">
    <div class="col-md-6 mb-3">
      <label for="book_title" class="form-label">Book Title</label>
      <input type="text" class="form-control" id="book_title" name="book_title" required>
    </div>

    <div class="col-md-6 mb-3">
      <label for="book_author" class="form-label">Book Name</label>
      <input type="text" class="form-control" id="book_author" name="book_author" required>
    </div>

    <div class="col-md-6 mb-3">
      <label for="book_cover" class="form-label">Book Image</label>
      <input type="file" class="form-control" id="book_cover" name="book_cover" accept="image/*" required>
    </div>

    <div class="col-md-6 mb-3">
      <label for="book_pdf" class="form-label">Book PDF</label>
      <input type="file" class="form-control" id="book_pdf" name="book_pdf" accept=".pdf" required>
    </div>

    <!-- Class Selection -->
    <div class="col-md-6 mb-3">
      <label for="book_class" class="form-label">Select Class</label>
      <select class="form-select" id="book_class" name="book_class" required>
        <option disabled selected>-- Select Class --</option>
        <% for(let i = 5; i <= 12; i++) { %>
          <option value="Class <%= i %>">Class <%= i %></option>
        <% } %>
      </select>
    </div>

    <div class="col-12 text-center mt-3">
      <button type="submit" class="btn btn-success">âœ… Submit</button>
    </div>
  </div>
  </form>
</div>

</div>  


